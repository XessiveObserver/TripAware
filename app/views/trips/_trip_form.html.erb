<%= form_with(model: trip) do |form| %>
    <% if trip.errors.any? %>
       <h2> <%= pluralize(trip.errors.count, "error") %> </h2>

        <ul>
            <% trip.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    <% end %>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :origin %>
        <%= form.text_field :origin %>
    </div>

    <div>
        <%= form.label :destination %>
        <%= form.text_field :destination %>
    </div>

    <div>
        <%= form.label :reason %>
        <%= form.text_area :reason %>
    </div>

    <div>
        <%= form.label :for_how_long %>
        <%= form.text_field :for_how_long %>
    </div>

    <div>
        <%= form.submit %>
        <%= link_to "<- Back ", :back,
         data: {turbo_frame: "_top"} %>
    </div>
<% end %>
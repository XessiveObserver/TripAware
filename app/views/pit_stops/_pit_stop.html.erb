<div class="mt-8 py-3 shadow p-5 shadow-slate-400 my-5">
    <hr>
    <h2 class="border-l-4 border-stone-600 rounded text-4xl bg-gray-200 p-3 font-sans font-bold text-stone-600 text-center my-5 mb-20">Pit Stops</h2>


    <div class="mb-5 text-right">
        <%= link_to "+ New pit stop", new_trip_pit_stop_path(@trip, @pit_stop),
        class: "text-sky-500 font-bold bg-sky-100 text p-3 rounded",
        data: {turbo_frame: "pit_stop"} %>
    </div><hr>

    <% if @trip.pit_stops.present? %>
        <% @trip.pit_stops.each do |pit_stop| %>        

            <div class="mt-3">
                <div class="basis-1/2 border-l-4 border-stone-500 bg-stone-200 p-3 text-stone-500 font-bold">
                    Name
                </div>
                <div class="basis-1/2 bg-stone-100 p-3 text-stone-500">
                    <%= pit_stop.name %>
                </div>
            
                <div class="basis-1/2 border-l-4 border-stone-500 bg-stone-200 p-3 text-stone-500 font-bold">
                    Location
                </div>
                <div class="basis-1/2 bg-stone-100 p-3 text-stone-500">
                    <%= pit_stop.location %>
                </div>
            
                <div class="basis-1/2 border-l-4 border-stone-500 bg-stone-200 p-3 text-stone-500 font-bold">
                    Remarks
                </div>
                <div class="basis-1/2 bg-stone-100 p-3 text-stone-500">
                    <%= pit_stop.remarks %>
                </div>
            </div>
        
            <div class="mt-5 flex items-end justify-end mb-5 space-x-3">
                <%= link_to "Edit pit stop", edit_trip_pit_stop_path(@trip, pit_stop),
                class: "text-blue-500 font-bold bg-blue-100 p-3 rounded",
                turbo_frame: "pit_stop" %>
                <%= link_to "Destroy Pit stop", [pit_stop.trip, pit_stop], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?",
                    },
                    class: "text-red-500 font-bold bg-red-100 p-3 rounded" %>
            </div>
            <div class="mt-3">
            <hr>
            </div>
        <% end %>
    <% else %>
        <p class="font-bold p-3 text-center">You've no pit stops yet ...</p>
    <% end %>
</div>
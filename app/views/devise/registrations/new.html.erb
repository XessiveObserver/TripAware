<div class="flex flex-col mx-auto my-20 p-8 
 sm:w-5/12 rounded shadow shadow-slate-500/50">
  <h2 class="text-center text-3xl text-slate-500 font-bold
      bg-slate-300 p-3 mb-5 rounded">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field space-y-2">
      <%= f.label :username, class: "text-slate-700 font-bold" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "text-field" %>
    </div>
    
    <div class="field space-y-2">
      <%= f.label :email, class: "text-slate-700 font-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
    </div>

    <div class="field space-y-2">
      <%= f.label :password, class: "text-slate-700 font-bold" %>
      <% if @minimum_password_length %>
      <em class="text-red-500 font-bold">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "text-field" %>
    </div>

    <div class="field space-y-2">
      <%= f.label :password_confirmation, class: "text-slate-700 font-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "Sign up", class: "submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<div class="flex flex-col mx-auto my-20 p-8 
 sm:w-5/12 rounded shadow shadow-slate-500/50">
  <h2 class="text-center text-3xl text-slate-500 font-bold
      bg-slate-300 p-3 mb-5 rounded">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field space-y-3">
      <%= f.label :email, class: "text-slate-700 font-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
    </div>

    <div class="actions my-3">
      <%= f.submit "Send me reset password instructions", class: "submit-btn" %>
    </div>
  <%= render "devise/shared/links" %>
  <% end %>

</div>

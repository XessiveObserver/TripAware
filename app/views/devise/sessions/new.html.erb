<div class="flex flex-col mx-auto mt-28 p-5 
 sm:w-5/12 rounded shadow shadow-slate-500/50">


    <h2 class="text-center text-3xl text-slate-500 font-bold
      bg-slate-300 p-3 mb-5 rounded">Log in below</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    
      <div class="field space-y-3">
        <%= f.label :email, class: "text-slate-700 font-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
      </div>

      <div class="field space-y-3">
        <%= f.label :password, class: "text-slate-700 font-bold" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "text-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field space-y-3">
          <%= f.check_box :remember_me, class: "p-2 mt-1 rounded focus:ring-0" %>
          <%= f.label :remember_me, class: "text-slate-700 font-bold p-2" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "submit-btn mt-3" %>
      </div>
    
  <% end %>
  <%= render "devise/shared/links" %>

</div>